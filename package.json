{
    "name": "ripe-commons-pluginus",
    "version": "0.1.8",
    "description": "RIPE Commons Pluginus",
    "keywords": [
        "commons",
        "pluginus",
        "ripe"
    ],
    "homepage": "https://github.com/ripe-tech/ripe-commons-pluginus#readme",
    "bugs": {
        "url": "https://github.com/ripe-tech/ripe-commons-pluginus/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ripe-tech/ripe-commons-pluginus.git"
    },
    "license": "Apache-2.0",
    "author": "Platforme",
    "files": [
        "index.js",
        "LICENSE",
        "dist/**/*",
        "js/**/*.js",
        "res/**/*.ico",
        "res/**/*.png",
        "test/**/*.js",
        "vue/**/*.js",
        "vue/**/*.vue"
    ],
    "main": "dist/ripe-commons-pluginus.min.js",
    "scripts": {
        "build": "webpack --mode production --config webpack.config.js",
        "build-dev": "webpack --mode development --config webpack.config.js",
        "build-storybook": "build-storybook -c .storybook -o storybook",
        "dev": "webpack-dev-server --config webpack.config.js --mode development --watch --hot",
        "lint": "eslint \"./**/*.{js,vue}\"",
        "lint-all": "npm run lint && npm run stylelint",
        "lint-fix": "eslint \"./**/*.{js,vue}\" --fix",
        "now-build": "npm run build && npm run build-storybook",
        "prettier": "prettier \"./**/*.{js,vue,json}\" --write",
        "pretty": "npm run prettier && npm run lint-fix && npm run stylelint-fix",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "stylelint": "stylelint \"./**/*.{css,scss,vue}\"",
        "stylelint-fix": "stylelint \"./**/*.{css,scss,vue}\" --fix",
        "test": "mocha --recursive",
        "upgrade": "npx sort-package-json && ncu -u",
        "watch": "webpack --config webpack.config.js --mode development --watch",
        "webpack": "webpack --config webpack.config.js"
    },
    "dependencies": {
        "loaders.css": "^0.1.2",
        "pluginus": "^0.2.6",
        "ripe-sdk": "^1.6.44",
        "vue": "^2.6.10",
        "vue-global-events": "^1.1.2",
        "vuex": "3.1.1"
    },
    "devDependencies": {
        "@storybook/addon-knobs": "^5.2.4",
        "@storybook/addon-storysource": "^5.2.4",
        "@storybook/vue": "^5.2.4",
        "babel-preset-vue": "^2.0.2",
        "url-loader": "^2.2.0",
        "uxf-webpack": "^0.2.18"
    }
}
